<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="css/style.css">
    <title>registro proyecto</title>
    <style>
        .container{
            max-width: 960px;
        }
    </style>
</head>
<body>
<div class="container">
    <div class="shadow-lg p-3 mb-5 bg-body rounded">
                <!-- Tabla Proyectos -->
        <table id="tablaProyectos" class="table mt-4">
            <thead>
            <tr>
                <th style="display: none;">ID</th>
                <th>Nombre Proyecto</th>
                <th>Nombre Corto Proyecto</th>
                <th>Descripcion</th>
                <th>Fecha Inicio</th>
                <th>Fecha Fin</th>
                <th>Stakeholder</th>
                <th>Acciones</th>
            </tr>
            </thead>
            <tbody>
            <% proyecto.forEach( (proyecto) => { %>
                <tr>
                    <td style="display: none;"><%= proyecto._id %></td>
                    <td><%= proyecto.nombrePry %></td>
                    <td><%= proyecto.nombreCrt %></td>
                    <td><%= proyecto.descripcion %></td>
                    <td><%= proyecto.fechaInicio %></td>
                    <td><%= proyecto.fechaFin %></td>
                    <td><%= proyecto.stakeholder %></td>
                    <td>
                        <a type="button" class="btnEditar btn btn-outline-primary bi bi-pencil"></a>
                        <a href="/borrar/<%= proyecto._id %>" class="btn btn-outline-danger bi bi-trash"></a>
                    </td>
                </tr>
            <% }) %>
            </tbody>
        </table>
        <!-- Agregar un enlace al formulario de registro -->
    <a   href="/registroProyecto" class="btn btn-primary">Registrar Proyecto</a>
    </div>

    <!-- Modal para Editar   -->
    <div id="modalAlumno" class="modal fade" tabindex="-1" aria-labelledby="modalAlumno" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title" id="exampleModalLabel">Editar Info</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/editar" method="POST">
                        <input name="id_editar" id="id_editar" type="text" hidden>
                        <div class="mb-1">
                            <label for="nombrePry_editar" class="col-form-label">Nombre del Proyecto:</label>
                            <input id="nombrePry_editar" name="nombrePry_editar" type="text" class="form-control" value="">
                        </div>
                        <div class="mb-1">
                            <label for="nombreCrt_editar" class="col-form-label">Alias del Proyecto:</label>
                            <input id="nombreCrt_editar" name="nombreCrt_editar" type="text" class="form-control" value="">
                        </div>
                        <div class="mb-1">
                            <label for="descripcion_editar" class="col-form-label">Descripcion del Proyecto:</label>
                            <textarea id="descripcion_editar" name="descripcion_editar" type="text" class="form-control" value="">
                        </div>
                        <div class="mb-1">
                            <label for="fechaInicio_editar" class="col-form-label">Fecha inicio:</label>
                            <input id="fechaInicio_editar" name="fechaInicio_editar" type="date" class="form-control" value="" onchange="this.value = new Date(this.value).toISOString().split('T')[0]">
                        </div>
                        <div class="mb-1">
                            <label for="fechaFin_editar" class="col-form-label">Fecha Fin:</label>
                            <input id="fechaFin_editar" name="fechaFin_editar" type="date" class="form-control" value="" onchange="this.value = new Date(this.value).toISOString().split('T')[0]">
                        </div>
                        
                        <div class="mb-1">
                            <label for="stakeholder" class="col-form-label">Nombre Stakeholder:</label>
                            <input id="stakeholder" name="stakeholder" type="text" class="form-control" value="">
                        </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Actualizar</button>
                </div>
                </form>
            </div>
        </div>
    </div>
    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
    <script src="js/code.js"></script>
</body>
</html>
